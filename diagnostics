foreach (array(__DIR__ . '/../..', __DIR__ . '/..', __DIR__) as $dir) {
    if (file_exists($dir . '/vendor/autoload.php')) {
        chdir($dir);
        break;
    }
}

unset($dir);

require 'vendor/autoload.php';

$application = new \Evolver\Diagnostics\Console\Application();
$application->run();
